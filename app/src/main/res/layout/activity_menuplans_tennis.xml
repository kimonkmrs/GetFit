<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menuplans_tennis">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="57dp"
        android:background="@drawable/meal_planif">





        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:background="@drawable/menu2"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:alpha="0.8"
            android:textColor="@color/black"
            android:background="@drawable/et_layout2"
            android:text="The following menu plans have been created to provide practitioners, practical examples on how to achieve appropriate macronutritient requirements for training and match play."
            tools:ignore="Autofill,HardcodedText,LabelFor,TextFields,VisualLintLongText,TextContrastCheck,VisualLintTextFieldSize" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:rowCount="1"
            android:columnCount="2"
            tools:ignore="UselessParent">

            <androidx.cardview.widget.CardView
                style="@style/Widget.Neumorph.CardView"
                android:id="@+id/DailyBreakfastTennis"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginStart="30dp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10sp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/breakfast"
                        android:layout_gravity="center"
                        tools:ignore="ContentDescription" />


                    <TextView
                        android:id="@+id/Breakfast"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="Standard daily breakfast"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="#30ffffff"
                        tools:ignore="HardcodedText,VisualLintBounds,TextContrastCheck" />

                </LinearLayout>




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/EveningMealTennis"
                style="@style/Widget.Neumorph.CardView"

                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                tools:ignore="TextSizeCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/evening"
                        tools:ignore="ContentDescription">


                    </ImageView>


                    <TextView
                        android:id="@+id/meal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:background="#30ffffff"
                        android:text="Evening meal the night before the match"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,VisualLintBounds,TextContrastCheck" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>







        </GridLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="What To Eat 1 – 2 Hours Before A Tennis Match"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/my_color"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The general rule here is that (unless you’re full) you should eat something, even if it is very small. By doing that, you’re ensuring that your glycogen reserves are full and that you will start the game ready.

If you’re about an hour away from your match, you should try to steer away from all fats and proteins, and look for carbs that will be rapidly absorbed by your body. Snacks that fit that criteria are:Fresh Fruit (Bananas, Apples, or Berries),Peanut Butter and Jelly Sandwich,Granola Bar,Dried Fruit,Rice Cake,Pretzels ,Dry Cereal."
            android:textSize="15sp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:gravity="center"
            />






    </LinearLayout>


</RelativeLayout>