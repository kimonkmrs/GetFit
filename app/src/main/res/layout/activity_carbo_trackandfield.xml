<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carbo_trackandfield">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbohydrate"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Carbohydrate is the preferred source of energy for the muscles and brain, making it an important component of a student athleteâ€™s diet. The amount of carbohydrate consumed will vary depending on what phase of training the athlete is in, pre-season, competition, or off-season.When choosing carbs
look for complex carbohydrates
vs simple carbohydrates.
Complex carbs are found in
products like whole grain
breads, pastas, and cereals.
Simple sugars should be limited,
and are found in refined foods
like white bread, sugary snacks,
and processed foods."
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:ignore="Autofill,HardcodedText,LabelFor,TextFields,VisualLintTextFieldSize,VisualLintLongText" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400sp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="1"
            android:columnCount="2"
            tools:ignore="UselessParent">

            <androidx.cardview.widget.CardView
                android:id="@+id/NutritionTrackCarboSources"
                style="@style/Widget.Neumorph.CardView"

                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginStart="30dp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10sp"
                tools:ignore="TextSizeCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/carbs"
                        tools:ignore="ContentDescription,ImageContrastCheck">


                    </ImageView>


                    <TextView
                        android:id="@+id/NutritionCarbsTennis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text="Food Source"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        tools:ignore="HardcodedText,VisualLintBounds,TextContrastCheck" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/DietaryPlanTrackandfield"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                tools:ignore="TextSizeCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/trainhard"
                        tools:ignore="ContentDescription">


                    </ImageView>


                    <TextView
                        android:id="@+id/IntakeStrategies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text="Intake Strategies"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        tools:ignore="HardcodedText,VisualLintBounds,TextContrastCheck" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </GridLayout>

    </LinearLayout>



</RelativeLayout>