<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carbo_basketball">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:gravity="center"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbohydrate"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Do not underestimate the role nutrition plays in acquiring maximum physical development. What you eat on a daily basis helps to determine body fat levels, as well as how much energy you will have for intense workouts and practices. Whether you are trying to gain muscle, reduce body fat, or maintain your current stature, it is very important to follow these basic dietary recommendations:
1)A balanced diet consists of approximately 60 percent carbohydrates, 20 percent fat and 20 percent protein.
2)Eat a variety of healthy foods (fruits, vegetables, whole grains, etc.).
3) Limit the intake of fat, sugar, and sodium.
4)Drink plenty of water.
5) Eat 5-7 small meals throughout the day. The size of the meal depends on the actual goal (weight loss vs. weight gain), as well as level of activity (two-a-days versus regular practice, tournaments versus regular games, etc.)."
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:ignore="Autofill,HardcodedText,LabelFor,TextFields,VisualLintTextFieldSize,VisualLintLongText" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clicking below you can find out the best food source for carbohydrate as well as intake strategies for best results!"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="1"
                android:columnCount="2"
                tools:ignore="UselessParent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/NutritionBasketballCarboSources"
                    style="@style/Widget.Neumorph.CardView"

                    android:layout_width="160sp"
                    android:layout_height="160sp"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="30dp"
                    tools:ignore="TextSizeCheck">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/NutritionCarbsBasketball"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:text="Food Source"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            tools:ignore="HardcodedText,VisualLintBounds,TextContrastCheck" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/carbs"
                            tools:ignore="ContentDescription,ImageContrastCheck">


                        </ImageView>




                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/DietaryPlan2"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="160sp"
                    android:layout_height="160sp"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10sp"
                    tools:ignore="TextSizeCheck">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/IntakeStrategies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:text="Intake Strategies"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            tools:ignore="HardcodedText,VisualLintBounds,TextContrastCheck" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/trainhard"
                            tools:ignore="ContentDescription">


                        </ImageView>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </GridLayout>

        </LinearLayout>



    </LinearLayout>




</RelativeLayout>