<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fat_volley_intake_strategies">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_fact_check_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/et_layout2"
                android:gravity="center"
                android:text="Monounsaturated fats are generally associated with being beneficial for health.They may have a positive effect on cholesterol levels. "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic"

                tools:ignore="Autofill,HardcodedText,LabelFor,TextFields,VisualLintTextFieldSize,VisualLintLongText,TextSizeCheck" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_fact_check_24"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/et_layout2"
                android:gravity="center"
                android:text="Polyunsaturated fats are considered the most healthy fats for your body. These include omega 3 fish oil and omega 6 vegetable oils.

Omega 3 oils are known to have an anti-inflammatory response in the body and may benefit cardiovascular disease.

Omega 6 oils can be great for the skin and also help with hormone balance. "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic"

                tools:ignore="Autofill,HardcodedText,LabelFor,TextFields,VisualLintTextFieldSize,VisualLintLongText,TextSizeCheck" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_fact_check_24"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/et_layout2"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Saturated fats are fats that are mainly of animal origin. Coconut oil is the exception as it is of plant origin. Saturated fats are not to be consumed excessively as  they have been implicated in contributing to cardiovascular disease."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic"

                tools:ignore="Autofill,HardcodedText,LabelFor,TextFields,VisualLintTextFieldSize,VisualLintLongText,TextSizeCheck" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weight"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/weight_monitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_monitor_weight_24"
                tools:ignore="ContentDescription" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your current weight (kg)?"
                android:textColor="@color/black"
                android:textSize="18sp"

                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/weight_monitor_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/background_box"
                android:hint="Type weight"
                android:inputType="numberDecimal"
                tools:ignore="HardcodedText,TouchTargetSizeCheck"
                android:autofillHints="" />



        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Low_intensity"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Easy_Training"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily fat intake for recovery in the general preparation  phase should range from "
                android:textColor="@color/black"
                android:textSize="15sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/count_easy_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="7dp"
                android:hint="g"

                android:inputType="numberDecimal"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.35"
                app:layout_constraintStart_toStartOf="@+id/Easy_Training"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/Easy_Training_pt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="125dp"
                android:text="to "

                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toEndOf="@+id/count_easy_low"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.64"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/count_easy_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:hint="g"

                android:inputType="numberDecimal"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toEndOf="@+id/Easy_Training_pt2"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/grams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="grams. "

                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/Easy_Training"
                app:layout_constraintHorizontal_bias="0.16"
                app:layout_constraintStart_toEndOf="@+id/count_easy_high"
                tools:ignore="HardcodedText" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Have a good source of fats about 3 hours before practice or matches to avoid gastrointestinal distress or cramping.
Fat sources such as fried foods (cheeseburgers, pizza, donuts, French fries, etc.) should be limited, instead try having healthier sources of fat such as avocados, nuts, seeds, and olive oil."
            android:textSize="15sp"
            android:textColor="@color/black"/>




    </LinearLayout>




</RelativeLayout>