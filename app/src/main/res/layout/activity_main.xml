<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
  <include layout="@layout/toolbar"
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="65dp"
      android:background="@color/black"
      android:alpha="0.7"

      tools:ignore="UseCompoundDrawables">



    <TextView
        android:id="@+id/welcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:text="Welcome!"
        android:textColor="@color/my_color"


        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,TextContrastCheck" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:text="Let us know about you!"
        android:textColor="@color/my_color"


        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <ImageView
        android:id="@+id/ask"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:src="@drawable/ask"
        android:layout_marginStart="30sp"
        tools:ignore="ContentDescription" />


  </LinearLayout>
  <LinearLayout

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="250sp"
      tools:ignore="Orientation">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="2"
        tools:ignore="ExtraText,UselessParent">



      <androidx.cardview.widget.CardView
          android:id="@+id/Personal_stats"
          style="@style/Widget.Neumorph.CardView"
          android:layout_width="160sp"
          android:layout_height="160sp"
          android:layout_marginHorizontal="10sp"
          android:layout_marginStart="30dp"
          android:layout_marginTop="10sp"
          android:alpha="0.8"

          app:neumorph_shapeType="pressed"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            tools:ignore="UseCompoundDrawables">
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="100dp"

              android:layout_gravity="center_horizontal"
              android:src="@drawable/baseline_person_24"
              tools:ignore="ContentDescription">


          </ImageView>


          <TextView
              android:id="@+id/Hypertrophy"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:background="@color/black"

              android:text="Personal Stats"
              android:gravity="center"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:textSize="25sp"

              tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck,VisualLintBounds" />

        </LinearLayout>




      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/Sports1"
          style="@style/Widget.Neumorph.CardView"
          android:layout_width="160sp"
          android:layout_height="160sp"
          android:layout_marginHorizontal="10sp"
          android:layout_marginTop="10sp"
          android:layout_marginStart="30dp"
          app:neumorph_shapeType="pressed"
          android:alpha="0.8"
          tools:ignore="TextSizeCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_gravity="center_horizontal"

              android:src="@drawable/sports"
              tools:ignore="ContentDescription">


          </ImageView>


          <TextView
              android:id="@+id/Sports"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"

              android:background="@color/black"
              android:text="Sports Menu"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:textSize="25sp"

              tools:ignore="HardcodedText,VisualLintBounds,TextSizeCheck" />

        </LinearLayout>


      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          style="@style/Widget.Neumorph.CardView"
          android:id="@+id/Calendar"
          android:layout_width="160sp"
          android:layout_height="160sp"
          android:layout_marginHorizontal="10sp"
          android:layout_marginTop="10sp"
          android:layout_marginStart="30dp"
          android:alpha="0.8"
          app:neumorph_shapeType="pressed"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_gravity="center_horizontal"

              android:src="@drawable/health"
              tools:ignore="ContentDescription">

          </ImageView>


          <TextView
              android:id="@+id/Strength_Powerlifting"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"

              android:background="@color/black"
              android:textSize="25sp"
              android:text="Workout Schedule"
              android:textColor="@color/white"
              android:textStyle="bold"

              tools:ignore="HardcodedText,VisualLintBounds,TextSizeCheck" />


        </LinearLayout>







      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/Match_events"
          style="@style/Widget.Neumorph.CardView"
          android:layout_width="160dp"
          android:layout_height="160dp"
          android:layout_marginHorizontal="10sp"
          android:layout_marginTop="10sp"
          android:layout_marginStart="30dp"
          app:neumorph_shapeType="pressed"
          android:alpha="0.8"
          tools:ignore="TextSizeCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_gravity="center_horizontal"

              android:src="@drawable/competition"
              tools:ignore="ContentDescription">


          </ImageView>


          <TextView
              android:id="@+id/Match_events2"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="@color/black"

              android:textSize="25sp"
              android:text="Match/events schedule"
              android:textColor="@color/white"
              android:textStyle="bold"

              tools:ignore="HardcodedText,VisualLintBounds,TextSizeCheck" />

        </LinearLayout>

      </androidx.cardview.widget.CardView>


    </GridLayout>

  </LinearLayout>


</RelativeLayout>



















  



