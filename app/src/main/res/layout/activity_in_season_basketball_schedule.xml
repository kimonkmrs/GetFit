<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".In_season_basketball_schedule">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You should check the match days and change the schedule accordingly. If you have a match day you should definitely rest the previous day, the day of the match and the next day. The remaining days are availiable for completing your workout schedule."
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            style="@style/Widget.Neumorph.CardView"
            android:id="@+id/Workout"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"

            android:alpha="0.8"
            app:neumorph_shapeType="pressed"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:orientation="vertical"

                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/trainhard"
                    tools:ignore="ContentDescription">


                </ImageView>



                <TextView
                    android:id="@+id/Football"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="The workouts"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="25sp"

                    tools:ignore="HardcodedText,VisualLintBounds"/>

            </LinearLayout>




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/Widget.Neumorph.CardView"
            android:id="@+id/Events"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"

            android:alpha="0.8"
            app:neumorph_shapeType="pressed"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:orientation="vertical"

                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/basket"
                    tools:ignore="ContentDescription">


                </ImageView>



                <TextView
                    android:id="@+id/Matchdays"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="The matchdays"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="25sp"

                    tools:ignore="HardcodedText,VisualLintBounds"/>

            </LinearLayout>




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/Widget.Neumorph.CardView"
            android:id="@+id/Nutritiontips"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"

            android:alpha="0.8"
            app:neumorph_shapeType="pressed"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:orientation="vertical"

                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/nutrition"
                    tools:ignore="ContentDescription">


                </ImageView>



                <TextView
                    android:id="@+id/Nutrition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nutrition tips for the game"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="25sp"

                    tools:ignore="HardcodedText,VisualLintBounds"/>

            </LinearLayout>




        </androidx.cardview.widget.CardView>



    </LinearLayout>



</RelativeLayout>