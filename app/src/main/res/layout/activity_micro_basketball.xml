<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Micro_basketball">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Micronutritients Requirement"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Athletes need other nutrients for an overall healthy body with proper function during a basketball game. You don’t need expensive fancy supplements to be healthy. If you choose an overall balanced diet with plenty of fruits and vegetables, lean proteins, healthy fats, low-fat dairy products, and whole grains, you’ll be able to provide your body with an appropriate balance and variety of all the nutrients it needs. "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/et_layout"
            tools:ignore="Autofill,HardcodedText,LabelFor,TextFields,VisualLintTextFieldSize,VisualLintLongText" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            tools:ignore="UselessParent">

            <androidx.cardview.widget.CardView
                android:id="@+id/Water_Soluble_Vitamins"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                app:neumorph_shapeType="pressed"
                tools:ignore="TextSizeCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/water_soluble_vitamins"
                        tools:ignore="ContentDescription,ImageContrastCheck">


                    </ImageView>


                    <TextView
                        android:id="@+id/water_soluble_vitamins"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:text="Water soluble vitamins sources"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        tools:ignore="HardcodedText,VisualLintBounds,TextContrastCheck" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Fat_Soluble_Vitamins"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10sp"
                app:neumorph_shapeType="flat"
                tools:ignore="TextSizeCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/fat_sol"
                        tools:ignore="ContentDescription,ImageContrastCheck">


                    </ImageView>


                    <TextView
                        android:id="@+id/fat_soluble_vitamins"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:text="Fat soluble vitamins sources"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        tools:ignore="HardcodedText,VisualLintBounds,TextContrastCheck" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Macrominerals"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="30dp"
                app:neumorph_shapeType="pressed"
                tools:ignore="TextSizeCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/macromin"
                        tools:ignore="ContentDescription">


                    </ImageView>


                    <TextView
                        android:id="@+id/macrominerals"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:text="Macrominerals sources"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        tools:ignore="HardcodedText,VisualLintBounds,TextContrastCheck" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/Widget.Neumorph.CardView"
                android:id="@+id/Trace_Minerals"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="30dp"
                app:neumorph_shapeType="pressed"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/trace_min"
                        tools:ignore="ContentDescription">


                    </ImageView>


                    <TextView
                        android:id="@+id/Trace_minerals"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:text="Trace Minerals sources"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        tools:ignore="HardcodedText,VisualLintBounds,TextContrastCheck" />

                </LinearLayout>




            </androidx.cardview.widget.CardView>


        </GridLayout>








    </LinearLayout>



</RelativeLayout>