<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carbohydrate_Intake_Strategies_boxing">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">
        <ImageView
            android:id="@+id/weight_monitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_monitor_weight_24"
            tools:ignore="ContentDescription" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your current weight (kg)?"
            android:textColor="@color/black"
            android:textSize="18sp"

            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/weight_monitor_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/background_box"
            android:hint="Type weight"
            android:inputType="numberDecimal"
            tools:ignore="HardcodedText,TouchTargetSizeCheck"
            android:autofillHints="" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/prologue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" Dr. James Morehen, performance nutritionist for many professional boxers (most notably Rocky Fielding) recommends an intake of 3 g per kg of bodyweight of carbohydrates."
            android:background="@color/my_color"

            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,VisualLintLongText" />


    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="DuplicateIds">
        <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In other words according to your current weight:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Low_intensity"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Easy_Training"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily carbohydrate intake while having two training sessions per day  should range from "
                android:textColor="@color/black"
                android:textSize="15sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/count_easy_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="7dp"
                android:hint="g"

                android:inputType="numberDecimal"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.50"
                app:layout_constraintStart_toStartOf="@+id/Easy_Training"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/Easy_Training_pt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="125dp"
                android:text="to "

                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toEndOf="@+id/count_easy_low"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.64"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/count_easy_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:hint="g"

                android:inputType="numberDecimal"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toEndOf="@+id/Easy_Training_pt2"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/grams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="grams. "

                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/Easy_Training"
                app:layout_constraintHorizontal_bias="0.16"
                app:layout_constraintStart_toEndOf="@+id/count_easy_high"
                tools:ignore="HardcodedText" />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/tip"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="During these sessions, it is smart to fuel yourself so you can maintain training quality and intensity. According to research after a boxing workout it is recommended to eat 30-60g of carbohydrates for every hour of training. It's important to note that these carbohydrates need to be fast digesting. An example would be a full sugar sports drink that you can sip on during your training. "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@color/purple_200"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp">


            <TextView
                android:id="@+id/caption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WHEN SHOULD I EAT MORE CARBS?"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generally, boxers should consume higher amounts of carbohydrates on high-intensity and high-volume training days (although there are several instances when this might not be preferable, such as when losing weight or training carbohydrate restricted).
You  might train twice a day, so consuming carbohydrates following the first session is vital for glycogen replenishment so that you’re ready for the second session later in the day."
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="normal"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />






        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp">


            <TextView
                android:id="@+id/caption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WHEN SHOULD I EAT LESS CARBS?"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short and low intensity training sessions (e.g. light jog, recovery sessions or light skipping) might not use much of your carbohydrate stores, so if you eat the same amount of carbs as on a high training load day you risk storing fat. Cut your carbohydrate intake when you’re not training as hard.
If you limit carbs before and after exercise there is some evidence to suggest that fatty acids will be used as an energy source which might be a key component in training adaptation.
Carbohydrate intake also needs to be lower on rest days because of a lower energy expenditure compared to training days."
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="normal"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />






        </LinearLayout>







    </LinearLayout>






</RelativeLayout>