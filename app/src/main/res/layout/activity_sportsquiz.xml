<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/olympic"
    tools:context=".Sportsquiz">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:text="Choose your favorite sport!"
                android:textColor="@color/purple_500"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <ImageView
                android:id="@+id/ask"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginStart="30sp"
                android:src="@drawable/choicesport"
                tools:ignore="ContentDescription,SportsChoice,ImageContrastCheck" />



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:columnCount="2"
                tools:ignore="UselessParent">

                <androidx.cardview.widget.CardView
                    style="@style/Widget.Neumorph.CardView"
                    android:id="@+id/Football1"
                    android:layout_width="160sp"
                    android:layout_height="160sp"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="30dp"
                    android:alpha="0.8"
                    app:neumorph_shapeType="pressed"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="0dp"
                        android:orientation="vertical"

                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/fball"
                            tools:ignore="ContentDescription">


                        </ImageView>



                        <TextView
                            android:id="@+id/Football"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Football"
                            android:textStyle="bold"

                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="25sp"

                            tools:ignore="HardcodedText,VisualLintBounds"/>

                    </LinearLayout>




                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    style="@style/Widget.Neumorph.CardView"
                    android:id="@+id/Basket"
                    android:layout_width="160sp"
                    android:layout_height="160sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"
                    android:alpha="0.8"
                    app:neumorph_shapeType="pressed"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/bball"
                            tools:ignore="ContentDescription">


                        </ImageView>



                        <TextView
                            android:id="@+id/Basketball"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Basketball"
                            android:textStyle="bold"

                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="25sp"

                            tools:ignore="HardcodedText,VisualLintBounds"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/Widget.Neumorph.CardView"
                    android:id="@+id/Tenniscard"
                    android:layout_width="160sp"
                    android:layout_height="160sp"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="30dp"
                    android:alpha="0.8"
                    app:neumorph_shapeType="pressed"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/tennis"
                            tools:ignore="ContentDescription">


                        </ImageView>



                        <TextView
                            android:id="@+id/Tennis"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Tennis"
                            android:textStyle="bold"

                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="25sp"

                            tools:ignore="HardcodedText,VisualLintBounds"/>

                    </LinearLayout>




                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    style="@style/Widget.Neumorph.CardView"
                    android:id="@+id/Volleycard"
                    android:layout_width="160sp"
                    android:layout_height="160sp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:alpha="0.8"
                    app:neumorph_shapeType="pressed"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/vball"
                            tools:ignore="ContentDescription">


                        </ImageView>



                        <TextView
                            android:id="@+id/Volley"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Volleyball"
                            android:textStyle="bold"

                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="25sp"

                            tools:ignore="HardcodedText,VisualLintBounds"/>

                    </LinearLayout>




                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    style="@style/Widget.Neumorph.CardView"
                    android:id="@+id/Boxcard"
                    android:layout_width="160sp"
                    android:layout_height="160sp"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="30dp"
                    android:alpha="0.8"
                    app:neumorph_shapeType="pressed"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/box"
                            tools:ignore="ContentDescription">


                        </ImageView>



                        <TextView
                            android:id="@+id/Box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Boxing"
                            android:textStyle="bold"

                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="25sp"

                            tools:ignore="HardcodedText,VisualLintBounds"/>

                    </LinearLayout>




                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    style="@style/Widget.Neumorph.CardView"
                    android:id="@+id/Runcard"
                    android:alpha="0.8"
                    android:layout_width="160sp"
                    android:layout_height="160sp"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10sp"
                    app:neumorph_shapeType="pressed"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/running"
                            tools:ignore="ContentDescription">


                        </ImageView>



                        <TextView
                            android:id="@+id/Running"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Track and Field"
                            android:textStyle="bold"

                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="25sp"

                            tools:ignore="HardcodedText,VisualLintBounds"/>

                    </LinearLayout>




                </androidx.cardview.widget.CardView>







            </GridLayout>



        </LinearLayout>





</RelativeLayout>









